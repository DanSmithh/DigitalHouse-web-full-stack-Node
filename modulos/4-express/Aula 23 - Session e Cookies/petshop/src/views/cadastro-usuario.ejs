<%- include('partials/header') %>

<main>
  <section class="cadastro-edicao">
    <div class="container small">
      <% if (erros) { %>
        <ul class="erros">
          <% erros.forEach(erro => { %>
            <li><%= erro.msg %></li>
          <% }) %>
        </ul>
      <% } %>

      <% if (user) { %>
        <h1>Editar de serviço</h1>
      <% } else { %>
        <h1>Cadastro de serviços</h1>
      <% } %>

      <% if (user) { %>
        <form action="/users/editar/<%= user.id %>?_method=PUT" method="POST">
      <% } else { %>
        <form action="/users/cadastrar" method="POST">
      <% } %>
          <div class="field">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" value="<% if (user) { %><%= user.nome %><% } %>">
          </div>

          <div class="field">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<% if (user) { %><%= user.email %><% } %>">
          </div>
  
        <div class="field">
          <label for="senha">Senha</label>
          <input type="password" id="senha" name="senha">
        </div>

        <button class="btn btn-primary" type="submit">Enviar</button>
      </form>
    </div>
  </section>
</main>

<%- include('partials/footer') %> 